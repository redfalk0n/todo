function showList(type){
    let ul = document.getElementById('list');
    while(ul.firstChild){
        ul.removeChild(ul.firstChild)
    }
    arr.forEach(function (value, id) {
        let li = document.createElement("li");
        li.innerText = value.text;
        li.id = id;
        li.complete = value.completed;
        if (li.complete){
            li.className = 'done'
        }
        li.onclick = changeList;
        if (type === 'all') {
            ul.appendChild(li);
        } else if(type === 'uncompleted' && !li.complete){
            ul.appendChild(li);
        } else if (type === 'completed' && li.complete){
            ul.appendChild(li);
        }

    })
}
